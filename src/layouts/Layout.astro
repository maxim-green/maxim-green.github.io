---
import {Header} from '../components/Header';
import {Content} from '../components/Content';
import {Footer} from '../components/Footer';
import {Link} from '../components/Link';
import {DarkModeSwitch} from '../components/DarkModeSwitch';
import {clsx} from 'clsx';

const pages = [
  { name: 'Home', href: '/' },
  { name: 'Resume', href: '/resume' },
  { name: 'Projects', href: '/projects' },
  { name: 'Blog', href: '/blog' },
];

const isActive = (href: string) => {
  return Astro.url.pathname === href;
}

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="bg-white dark:bg-gray-800 text-gray-800 dark:text-white">
    <header class="sticky top-0 w-full bg-white dark:bg-gray-800 text-gray-800 dark:text-white">
      <div class="container h-16 mx-auto flex items-center justify-between">
        <div>
          LOGO
        </div>
        <nav class="ml-auto">
          <ul class="flex items-center justify-between">
            {pages.map(({name, href}) => (
              <li>
                <Link href={href} active={isActive(href)}>{name}</Link>
              </li>
            ))}
          </ul>
        </nav>
        <div>
          <DarkModeSwitch client:load />
        </div>
      </div>
    </header>
    
    <Content>
      <slot />
    </Content>
    <Footer/>
	</body>
</html>

