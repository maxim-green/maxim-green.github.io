---
import skillsData from '../../../data/skills.json';

interface Props {
  data: string[]; // ids of skills
}

const skills = {};
skillsData.forEach((skill) => {
  skills[skill.id] = skill;
});

const { data } = Astro.props;
---

<section class="my-12">
  <h2 class="text-4xl font-bold mb-8">
    Skills
  </h2>
  <div class="grid grid-cols-3 gap-x-9 gap-y-6">
    {data.map((skillId, i) => {
      const {name, description, logo} = skills[skillId];
      return <article class="flex flex-row gap-4 py-4 pr-8 pl-4 card card-bordered border-gray-300 bg-base-100 shadow-sm">
        <div class="flex items-center justify-center min-w-14 w-14">
          <img src={logo} alt="name">
        </div>
        <div>
          <h3 class="text-2xl text-gray-700 mb-2">
            {name}
          </h3>
          <p class="text-gray-400">
            {description}
          </p>
        </div>
      </article>
    })}
  </div>
</section>